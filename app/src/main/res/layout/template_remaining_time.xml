<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_layout_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="#e2e3e5"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/main_txt_time_hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42dp"
        android:text="00"
        android:textColor="#000000"
        android:layout_marginLeft="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/main_txt_hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="h"
        android:layout_marginLeft="@dimen/time_margin"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/main_txt_time_hr"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/main_txt_time_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42dp"
        android:text="23"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/main_txt_hr"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/time_margin_hr_min"/>

    <TextView
        android:id="@+id/main_txt_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="m"
        android:layout_toRightOf="@id/main_txt_time_min"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/time_margin"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>