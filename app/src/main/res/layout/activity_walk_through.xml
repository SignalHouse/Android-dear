<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WalkThroughActivity">
    <LinearLayout
        android:id="@+id/walk_through_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/walk_through_btn_skip"
        android:layout_alignParentTop="true">
        <android.support.v4.view.ViewPager
            android:id="@+id/walk_through_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </android.support.v4.view.ViewPager>
        <android.support.design.widget.TabLayout
            android:id="@+id/walk_through_tab_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabBackground="@drawable/walkthrough_tab_selector"
            ></android.support.design.widget.TabLayout>
    </LinearLayout>
    <Button
        android:id="@+id/walk_through_btn_skip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/buttonColor"
        android:textColor="#ffffff"
        android:text="Skip"
        android:fontFamily="@font/prata_regular"
        android:textAllCaps="false"
        />
</RelativeLayout>