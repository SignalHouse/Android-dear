<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LostActivity">
    <include
        android:id="@+id/lost_tool_bar"
        layout="@layout/tool_bar_base"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--<ImageView-->
        <!--android:id="@+id/lost_image"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="120dp"-->
        <!--android:background="#868686"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintVertical_bias=".25"-->
        <!--/>-->

    <TextView
        android:id="@+id/lost_txt_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="비밀번호를 잊어버리셨나요?"
        android:textColor="#302f37"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"
        />

    <TextView
        android:id="@+id/lost_txt_desrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="회원가입시 입력했던 이메일을 입력해주시면\n임시 비밀번호를 발송해 드릴게요."
        android:textColor="#636363"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost_txt_pw"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/lost_edit_email"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="이메일을 입력해주세요."
        android:background="#ffffff"
        android:textSize="16dp"
        android:layout_marginTop="50dp"
        android:paddingLeft="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost_txt_desrp"
        app:layout_constraintVertical_bias="0"
        />

    <Button
        android:id="@+id/lost_btn_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/buttonColor"
        android:textColor="#ffffff"
        android:text="Send"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost_edit_email"
        app:layout_constraintVertical_bias="0"
        />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>